{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's public profile information.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "photoURL": {
            "type": "string",
            "format": "uri",
            "description": "URL of the user's profile picture."
        }
      }
    },
    "Project": {
      "title": "Project",
      "description": "A portfolio project.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "shortDescription": { "type": "string" },
        "category": { "type": "string" },
        "mainImageUrl": { "type": "string", "format": "uri" },
        "images": { "type": "array", "items": { "type": "string", "format": "uri" } },
        "tags": { "type": "array", "items": { "type": "string" } },
        "order": { "type": "number" },
        "caseStudy": {
          "type": "object",
          "properties": {
            "problem": { "type": "string" },
            "solution": { "type": "string" },
            "tools": { "type": "string" },
            "outcome": { "type": "string" }
          }
        }
      },
      "required": ["title", "shortDescription", "category", "mainImageUrl", "order"]
    },
    "Message": {
      "title": "Message",
      "description": "A contact message from a visitor.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "message": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "read": { "type": "boolean" }
      },
      "required": ["name", "email", "message", "createdAt"]
    },
    "SiteContent": {
        "title": "Site Content",
        "description": "Generic Site Content schema",
        "type": "object",
        "properties": {}
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores public profiles for all users."
    },
    "/projects/{projectId}": {
      "schema": { "$ref": "#/entities/Project" },
      "description": "Stores individual portfolio projects."
    },
    "/messages/{messageId}": {
      "schema": { "$ref": "#/entities/Message" },
      "description": "Stores contact messages from site visitors."
    },
    "/siteContent/{contentId}": {
        "schema": { "$ref": "#/entities/SiteContent" },
        "description": "Stores site content documents like hero, about, theme, etc."
    }
  }
}
